<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        PreviewKeyDown="MainWindow_OnPreviewKeyDown"
        Title="MainWindow" Height="450" Width="365">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24*"></RowDefinition>
            <RowDefinition Height="163*"/>
            <RowDefinition Height="30*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="297*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="ListBox1" Margin="0,48,0,0" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBox x:Name="Box" Margin="67,326,0,0" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" Foreground="White" Background="#FF1710FF"/>
        <Button Click="Sends" Margin="0,326,1,0" Grid.Row="1" Grid.RowSpan="2" Background="#FF1FFF00"/>
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="Govnogram" VerticalAlignment="Center" Width="365" Grid.ColumnSpan="2" Height="48" Background="#FF1710FF" Foreground="#FFFDFDFD" FontSize="30" FontWeight="Bold" TextAlignment="Center"/>
    </Grid>
</Window>
